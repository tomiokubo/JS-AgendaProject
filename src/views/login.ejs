<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="display-1 text-center">Criar conta ou entrar</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
                </div>
                
                <%- include('includes/messages') %>

                <div class="row">
                    <div class="col-lg">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não possui uma conta, preencha o formulário abaixo:</p>

                        <form class="form-register" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>

                            <button type="submit" class="btn btn-primary my-3">Submit</button>
                        </form>
                    </div>
                    <div class="col-lg">
                        <h4>Faça seu login</h4>

                        <p>Se você já possui uma conta, faça login abaixo:</p>

                        <form class= "form-login" action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary my-3">Submit</button>
                        </form>

                    </div>

                </div>


                <div class="col-lg-2"></div>
            </div>
        </div>
        <%- include('includes/footer') %>