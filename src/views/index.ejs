<%- include('includes/head') %>
<%- include('includes/nav') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="display-1 text-center">Agenda</h1>
                <p class="text-center lead">Seus contatos est√£o abaixo</p>

                <%- include('includes/messages')%>
                <%if (contatos.length>0){%>
                <div class="responsive-table">
                    <table class="table my-3">
                        <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td><a href="/contato/index/<%= contato._id %>">Edit</a></td>
                                <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Delete</a></td>
                            </tr>
                            <% }); %>
                        
                    </table>
                </div>
                <%}else {%>
                    <p class="text-center lead">There are no contacts in your agenda</p>
                <%}%> 
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer') %>

   